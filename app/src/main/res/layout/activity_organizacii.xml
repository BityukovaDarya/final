<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Organizacii"
    android:background="@drawable/meikerfon">

    <Button
        android:id="@+id/meikerm"
        android:layout_width="149dp"
        android:layout_height="133dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="590dp"
        android:background="@drawable/btnreg"
        android:fontFamily="@font/fjalla_one"
        android:onClick="meiker"
        android:text="Перейти на сайт
                    Узнать больше о мейкерах" />

    <ImageButton
        android:id="@+id/backfest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/fon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/previous" />


    <ImageButton
        android:id="@+id/bt_previous"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="220dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back" />

    <ImageSwitcher

        android:id="@+id/image_switcher"
        android:layout_width="286dp"
        android:layout_height="254dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="70dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/bt_next"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="220dp"
        android:background="@android:color/transparent"
        android:src="@drawable/next" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>